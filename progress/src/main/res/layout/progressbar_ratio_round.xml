<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <cn.com.egova.progress.bar.RoundProgressBarWidthNumber
            android:id="@+id/proBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dip"
            android:padding="5dp"
            android:progress="0"
            app:progress_text_color="#ff2903FC"
            app:progress_reached_color="#ff2903FC"
            app:progress_unreached_color="#ffBCB4E8"
            app:progress_reached_bar_height="2dp"
            app:progress_unreached_bar_height="2dp"/>
    </LinearLayout>

</FrameLayout>